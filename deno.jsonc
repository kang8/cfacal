{
  "tasks": {
    "dev": "deno run --allow-read --allow-write --allow-net src/main.ts",
    "test": "deno test --allow-read",
    "test:rebase": "deno test --allow-read --allow-write -- -u",
    "format": "deno fmt",
    "lint": "deno lint"
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "include": [
      "src/",
      "test/"
    ]
  },
  "fmt": {
    "semiColons": false,
    "singleQuote": true,
    "include": [
      "src/",
      "test/"
    ]
  },
  "test": {
    "include": [
      "test/"
    ]
  }
}
